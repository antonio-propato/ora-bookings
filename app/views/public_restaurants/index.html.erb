<h1>Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <div>
        <!-- Restaurant name as a hyperlink -->
        <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>

        <!-- Display the cuisine -->
        <p><%= restaurant.cuisine %></p>

        <!-- Display restaurant pictures -->
        <div>
          <% if restaurant.pictures.attached? %>
            <% restaurant.pictures.each do |picture| %>
              <%= image_tag picture, width: 150, height: 100, alt: restaurant.name, style: "margin-right: 10px; display: inline-block;" %>
            <% end %>
          <% else %>
            <p>No image available</p>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<p><%= link_to "Admin Area", admin_restaurants_path %></p>

<% if user_signed_in? %>
  <p><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></p>
<% else %>
  <p><%= link_to "Sign In", new_user_session_path %></p>
  <p><%= link_to "Sign Up", new_user_registration_path %></p>
<% end %>
