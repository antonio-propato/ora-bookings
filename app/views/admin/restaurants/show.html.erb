<h1><%= @restaurant.name %></h1>

<p><strong>Location:</strong> <%= @restaurant.location %></p>
<p><strong>Cuisine:</strong> <%= @restaurant.cuisine %></p>
<p><strong>Description:</strong> <%= @restaurant.description %></p>

<!-- Delete button form -->
<%= form_with(model: [:admin, @restaurant], url: admin_restaurant_path(@restaurant), method: :delete, data: { confirm: 'Are you sure?' }) do |form| %>
  <%= form.submit 'Delete', data: { turbo: false } %>
<% end %>

<%= link_to 'Edit', edit_admin_restaurant_path(@restaurant) %> |
<%= link_to 'Back to list', admin_restaurants_path %>
