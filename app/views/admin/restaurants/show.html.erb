<h1><%= @restaurant.name %></h1>

<p><strong>Location:</strong> <%= @restaurant.location %></p>
<p><strong>Cuisine:</strong> <%= @restaurant.cuisine %></p>
<p><strong>Description:</strong> <%= @restaurant.description %></p>

<% if @restaurant.pictures.attached? %>
  <div class="pictures-container">
    <% @restaurant.pictures.each do |picture| %>
      <div class="picture-box">
        <%= image_tag picture, class: 'w-100 h-100 object-cover', alt: "Restaurant Image" %>
        <!-- Delete button for each picture -->
      </div>
    <% end %>
  </div>
<% else %>
  <p>No pictures available for this restaurant.</p>
<% end %>

<!-- Edit button -->
<%= link_to 'Edit', edit_admin_restaurant_path(@restaurant), class: 'btn btn-primary' %> |
<%= link_to 'Back to list', admin_restaurants_path %> |

<!-- Delete restaurant button form -->
<%= form_with(model: [:admin, @restaurant], url: admin_restaurant_path(@restaurant), method: :delete, data: { confirm: 'Are you sure you want to delete this restaurant?' }) do |form| %>
  <%= form.submit 'Delete Restaurant', data: { turbo: false } %>
<% end %>
